# =============================
# iMAX - .env.example
# =============================

# -----------------------------
# Server Configuration
# -----------------------------
PORT=3000
# Porta que o servidor Express vai escutar

# -----------------------------
# Database Configuration
# -----------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/griccodb
# URL completa para o banco PostgreSQL

# -----------------------------
# JWT Configuration
# -----------------------------
JWT_SECRET=your_super_secret_key
# Chave secreta para assinar e verificar JWT

JWT_EXPIRATION=1h
# Tempo de expiração do token (ex: 15m, 1h, 7d)

# -----------------------------
# Admin Seed User Configuration
# -----------------------------
ADMIN_EMAIL=admin@admin.com
ADMIN_PASSWORD=admin123

# -----------------------------
# Reset Password Configuration
# -----------------------------
RESET_TOKEN_EXPIRATION=15m
# Tempo de expiração do link de redefinição de senha

# -----------------------------
# Email Configuration
# -----------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=youremail@gmail.com
SMTP_PASS=yourpassword
SMTP_FROM=IMAX <no-reply@imax.com>

ACCESS_TOKEN_SECRET=supersecretacesskey
REFRESH_TOKEN_SECRET=supersecretrefreshkey